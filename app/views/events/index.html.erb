<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Details</th>
      <th>Date</th>
      <th>Time interval</th>
      <th>Time of last send</th>
      <th>Time for first send</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.details %></td>
        <td><%= event.date %></td>
        <td><%= event.time_interval %></td>
        <td><%= event.time_of_last_send %></td>
        <td><%= event.time_for_first_send %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

